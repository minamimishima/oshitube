<div class="container">
  <h1>パスワード再設定</h1>
  <%= form_with model: @user, url: user_password_path do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div> 
    
    <div class="actions">
      <%= f.submit "パスワード再設定メールを送信" %>
    </div>
  <% end %>
</div>
