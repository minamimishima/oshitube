<div class="registrations-sessions-container container">
  <h2>ログイン</h2>
  
  <%= form_with model: @user, url: user_session_path do |f| %>
    <div class="field">
      <%= f.label :email, "メールアドレス" %><br />
      <%= f.email_field :email, autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :password, "パスワード" %><br />
      <%= f.password_field :password %>
    </div>
  
    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "自動ログイン" %>
      </div>
    <% end %>
  
    <div class="actions">
      <%= f.submit "ログイン" %>
    </div>
  <% end %>
  <%= link_to "新規登録", new_user_registration_path %><br>
  <%= link_to "パスワードを忘れた場合", new_user_password_path %>
</div>
