<div id="login" class="container">
  <h3 class="text-center pt-4">ログイン</h3>
  <div id="login__row" class="row justify-content-center align-items-center">
    <div id="login__column" class="col-md-6">
      <div id="login__box">
        <%= form_with model: @user, id: "login__form", class: "form", url: user_session_path do |f| %>
          <div class="login__form-group mb-3">
            <%= f.label :email, "メールアドレス" %>
            <%= f.email_field :email, class: "form-control", autofocus: true %>
          </div>

          <div class="login__form-group mb-3">
            <%= f.label :password, "パスワード" %>
            <%= f.password_field :password, class: "form-control" %>
          </div>

          <div class="login__form-group-action mb-3">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me, "自動ログイン" %>
            <% end %>
            <br>
            <%= f.submit "ログイン", class: "btn mt-3 login__button" %>
          </div>

          <div class="login__link">
            <%= link_to "新規登録", new_user_registration_path %><br>
            <%= link_to "パスワードを忘れた場合", new_user_password_path %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
