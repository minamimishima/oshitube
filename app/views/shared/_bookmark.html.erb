<div id="bookmark__column" class="col-xl-6">
  <ul class="bookmark__list bookmark-<%= bookmark.id %> list-group my-4">
    <li class="list-group-item"><%= image_tag video_thumbnail(bookmark.video_id), height: "315", width: "auto", class: "video-thumbnail" %></li>
    <li class="list-group-item"><%= link_to video_title(bookmark.video_id), bookmark_path(bookmark.id), class: "video-title" %></li>
    <li class="list-group-item"><%= bookmark.description %></li>
  </ul>
</div>
