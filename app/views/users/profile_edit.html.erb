<div class="container">
  <h2>プロフィールの変更</h2>

  <% if @user.errors.any? %>
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
  
  <%= form_with(model: @user, url: profile_edit_path, local: true, method: :post) do |f| %>
  
    <div class="field">
      <%= f.label :name, "名前" %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>
  
    <div class="field">
      <%= f.label :profile, "プロフィール" %><br />
      <%= f.text_area :profile %>
    </div>
  
    <div class="field">
      <%= f.label :icon, "アイコン画像" %><br />
      <%= f.file_field :icon %>
    </div>
  
    <div class="actions">
      <%= f.submit "変更" %>
    </div>
  <% end %>
</div>
